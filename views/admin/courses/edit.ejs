<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kursni Tahrirlash</title>
    <link rel="stylesheet" 
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" 
          crossorigin="anonymous" 
          referrerpolicy="no-referrer" />
          
    <style>
        :root {
            --primary-color: #1abc9c; /* Kurslar uchun asosiy rang */
            --secondary-color: #3498db;
            --success-color: #2ecc71;
            --background-light: #f4f4f4;
            --card-background: #ffffff;
            --danger-color: #e74c3c;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: var(--background-light);
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            margin: 0;
        }

        .form-container { 
            width: 90%; 
            max-width: 650px; /* Kengroq qildim */
            background: var(--card-background); 
            padding: 40px; 
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1); 
        }

        h1 {
            color: var(--primary-color); 
            text-align: center;
            border-bottom: 2px solid #eee;
            padding-bottom: 10px;
            margin-bottom: 30px;
            font-size: 1.8em;
        }

        /* Xato Xabarlari */
        .error-list {
            list-style: none;
            padding: 10px 15px;
            margin-bottom: 20px;
            background: #fef2f2;
            border: 1px solid var(--danger-color);
            border-radius: 8px;
        }
        .error-list li {
            color: var(--danger-color);
            font-size: 0.9em;
            margin-bottom: 5px;
        }

        /* Forma Elementlari */
        .form-group { margin-bottom: 20px; }
        label { display: block; margin-bottom: 8px; font-weight: 600; color: #555; }

        input[type="text"], input[type="number"], select, textarea {
            width: 100%;
            padding: 12px;
            border: 1px solid #ddd;
            border-radius: 8px;
            box-sizing: border-box;
            font-size: 1em;
            transition: border-color 0.3s;
        }
        
        input:focus, select:focus, textarea:focus {
            border-color: var(--secondary-color);
            outline: none;
            box-shadow: 0 0 0 2px rgba(52, 152, 219, 0.2);
        }
        
        textarea { resize: vertical; min-height: 100px; }
        input[type="number"] { max-width: 150px; }
        
        /* Select Multiple uchun stil */
        select[multiple] {
            min-height: 120px;
            padding: 5px;
        }
        
        /* Saqlash Tugmasi */
        button[type="submit"] {
            width: 100%;
            padding: 12px;
            background-color: var(--success-color);
            color: white;
            font-size: 1.1em;
            font-weight: bold;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            transition: background-color 0.3s, transform 0.2s;
        }
        button[type="submit"]:hover {
            background-color: #27ae60;
            transform: translateY(-1px);
        }

        /* Qaytish Havolasi */
        .back-link {
            display: block;
            text-align: center;
            margin-top: 25px;
            color: var(--secondary-color);
            text-decoration: none;
            font-weight: 600;
        }
    </style>
</head>
<body>
    <div class="form-container">
        <h1><i class="fas fa-edit"></i> Kursni Tahrirlash: <%= course.title %></h1>
        
        <% if (errors && errors.length > 0) { %>
            <ul class="error-list">
                <% errors.forEach(err => { %>
                    <li><%= err.message %></li>
                <% }) %>
            </ul>
        <% } %>
        
        <% const data = old && Object.keys(old).length > 0 ? old : course; %>

        <form action="/admin/courses/<%= course.id %>/edit" method="POST">
            
            <div class="form-group">
                <label for="title">Kurs Nomi (Title): *</label>
                <input type="text" name="title" id="title"
                       value="<%= data.title || '' %>" 
                       required />
            </div>
            
            <div class="form-group">
                <label for="credits">Kreditlar soni: *</label>
                <input type="number" name="credits" id="credits"
                       value="<%= data.credits || '' %>" 
                       required min="1" max="30" />
            </div>

            <div class="form-group">
                <label for="faculty_id">Tegishli Fakultet: *</label>
                <select name="faculty_id" id="faculty_id" required>
                    <option value="">Fakultetni tanlang</option>
                    <% faculties.forEach(f => { 
                        const isSelected = data.faculty_id === f.id;
                    %>
                        <option value="<%= f.id %>" <%= isSelected ? 'selected' : '' %>>
                            <%= f.name %>
                        </option>
                    <% }) %>
                </select>
            </div>
            
            <div class="form-group">
                <label for="teacher_ids">O'qituvchilarni Tayinlash (Bir yoki bir nechta tanlang):</label>
                <select name="teacher_ids" id="teacher_ids" multiple size="7" >
                    
                    <% employees.forEach(emp => { 
                        let isSelected = false;
                        
                        // 1. Agar validatsiya xatosi bo'lsa, old.teacher_ids dan tekshiramiz
                        if (old && old.teacher_ids) {
                            // old.teacher_ids string (bitta tanlansa) yoki massiv (ko'p tanlansa) bo'lishi mumkin
                            const oldTeachers = Array.isArray(old.teacher_ids) ? old.teacher_ids : [old.teacher_ids];
                            isSelected = oldTeachers.includes(emp.id);
                        } 
                        // 2. Aks holda (birinchi marta ochilganda), controllerdan kelgan assignedTeacherIds massividan tekshiramiz
                        else if (assignedTeacherIds) {
                            isSelected = assignedTeacherIds.includes(emp.id);
                        }
                        
                    %>
                        <option value="<%= emp.id %>" <%= isSelected ? 'selected' : '' %>>
                            <%= emp.first_name %> <%= emp.last_name %> (<%= emp.position %>)
                        </option>
                    <% }) %>
                </select>
                <small style="display: block; margin-top: 5px; color: #888;">Tanlash uchun **CTRL** yoki **CMD** tugmasini ushlab turing.</small>
            </div>
            
            <div class="form-group">
                <label for="description">Tavsif (ixtiyoriy):</label>
                <textarea name="description" id="description" 
                          placeholder="Kurs haqida batafsil ma'lumot..."><%= data.description || '' %></textarea>
            </div>
            
            <button type="submit">
                <i class="fas fa-save"></i> O'zgarishlarni Saqlash
            </button>
        </form>
        
        <a href="/admin/courses" class="back-link">
            <i class="fas fa-arrow-left"></i> Ro'yxatga qaytish
        </a>
    </div>
</body>
</html>