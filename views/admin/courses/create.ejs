<body>
    <div class="form-container" style="--primary-color: #1abc9c;">
        <h1><i class="fas fa-book-open"></i> Yangi Kurs Yaratish</h1>
        
        <% if (errors && errors.length > 0) { /* ... */ } %>

        <form action="/admin/courses" method="POST">
            
            <div class="form-group">
                <label for="title">Kurs Nomi (Title): *</label>
                <input type="text" name="title" value="<%= old.title || '' %>" required />
            </div>
            
            <div class="form-group">
                <label for="credits">Kreditlar soni: *</label>
                <input type="number" name="credits" value="<%= old.credits || '' %>" required min="1" max="30" placeholder="Masalan: 5" />
            </div>

            <div class="form-group">
                <label for="faculty_id">Tegishli Fakultet: *</label>
                <select name="faculty_id" id="faculty_id" required>
                    <option value="">Fakultetni tanlang</option>
                    <% faculties.forEach(f => { %>
                        <option value="<%= f.id %>" <%= old.faculty_id === f.id ? 'selected' : '' %>>
                            <%= f.name %>
                        </option>
                    <% }) %>
                </select>
            </div>
            
            <div class="form-group">
                <label for="description">Tavsif (ixtiyoriy):</label>
                <textarea name="description" placeholder="Kurs haqida batafsil ma'lumot..."><%= old.description || '' %></textarea>
            </div>
            
            <button type="submit"><i class="fas fa-save"></i> Kursni Saqlash</button>
        </form>
        
        <a href="/admin/courses" class="back-link"><i class="fas fa-arrow-left"></i> Ro'yxatga qaytish</a>
    </div>
</body>
</html>