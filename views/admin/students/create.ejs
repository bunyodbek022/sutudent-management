<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Yangi Talaba Yaratish</title>
    <link rel="stylesheet" 
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" 
          integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" 
          crossorigin="anonymous" 
          referrerpolicy="no-referrer" />
          
    <style>
        :root {
            --primary-color: #3498db;
            --secondary-color: #2c3e50;
            --success-color: #2ecc71;
            --background-light: #f4f4f4;
            --card-background: #ffffff;
            --danger-color: #e74c3c;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: var(--background-light);
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            margin: 0;
        }

        .form-container { 
            width: 90%; 
            max-width: 700px;
            background: var(--card-background); 
            padding: 40px; 
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1); 
        }

        h1 {
            color: var(--primary-color); 
            text-align: center;
            border-bottom: 2px solid #eee;
            padding-bottom: 10px;
            margin-bottom: 30px;
            font-size: 1.8em;
        }

        /* Forma Elementlari */
        .form-group {
            margin-bottom: 20px;
        }

        label {
            display: block;
            margin-bottom: 8px;
            font-weight: 600;
            color: #555;
        }

        input[type="text"], input[type="email"], input[type="date"], select, textarea {
            width: 100%;
            padding: 12px;
            border: 1px solid #ddd;
            border-radius: 8px;
            box-sizing: border-box;
            font-size: 1em;
            transition: border-color 0.3s;
        }
        
        input:focus, select:focus, textarea:focus {
            border-color: var(--primary-color);
            outline: none;
            box-shadow: 0 0 0 2px rgba(52, 152, 219, 0.2);
        }
        
        /* Layout */
        .grid-half {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
        }

         /* Kurslar tanlash uchun maxsus uslub */
        .course-selection-box {
            border: 1px solid #ddd;
            padding: 15px;
            border-radius: 8px;
            max-height: 150px;
            overflow-y: auto;
            background-color: #fcfcfc;
        }
        .course-selection-box label {
            font-weight: normal;
            margin-left: 5px;
            display: inline;
        }

         /* Xato Xabarlari */
        .error-list {
            list-style: none;
            padding: 10px 15px;
            margin-bottom: 20px;
            background: #fef2f2;
            border: 1px solid var(--danger-color);
            border-radius: 8px;
        }
        .error-list li {
            color: var(--danger-color);
            font-size: 0.9em;
            margin-bottom: 5px;
        }
        
        /* Saqlash Tugmasi */
        button[type="submit"] {
            width: 100%;
            padding: 12px;
            background-color: var(--success-color);
            color: white;
            font-size: 1.1em;
            font-weight: bold;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            transition: background-color 0.3s, transform 0.2s;
            margin-top: 15px; /* Qo'shimcha kurslar qutisi uchun margin */
        }
        button[type="submit"]:hover {
            background-color: #27ae60;
            transform: translateY(-1px);
        }

        /* Qaytish Havolasi */
        .back-link {
            display: block;
            text-align: center;
            margin-top: 25px;
            color: var(--secondary-color);
            text-decoration: none;
            font-weight: 600;
        }
    </style>
</head>
<body>
    <div class="form-container">
        <h1><i class="fas fa-user-graduate"></i> Yangi Talabani Ro'yxatdan O'tkazish</h1>
        
        <% if (errors && errors.length > 0) { %>
            <ul class="error-list">
                <% errors.forEach(err => { %>
                    <li><%= err.message %></li>
                <% }) %>
            </ul>
        <% } %>

        <form action="/admin/students" method="POST">
            
            <div class="grid-half">
                <div class="form-group">
                    <label for="first_name">Ism: *</label>
                    <input type="text" name="first_name" value="<%= old.first_name || '' %>" required />
                </div>
                <div class="form-group">
                    <label for="last_name">Familiya: *</label>
                    <input type="text" name="last_name" value="<%= old.last_name || '' %>" required />
                </div>
            </div>

            <div class="grid-half">
                <div class="form-group">
                    <label for="email">Email: *</label>
                    <input type="email" name="email" value="<%= old.email || '' %>" required />
                </div>
                <div class="form-group">
                    <label for="phone_number">Telefon Raqami:</label>
                    <input type="text" name="phone_number" value="<%= old.phone_number || '' %>" placeholder="+998 9x xxx xx xx" />
                </div>
            </div>

            <div class="grid-half">
                <div class="form-group">
                    <label for="birth_date">Tug'ilgan sana: *</label>
                    <input type="date" name="birth_date" value="<%= old.birth_date || '' %>" required />
                </div>
                <div class="form-group">
                    <label for="enrollmentDate">Qabul qilingan sana: *</label>
                    <input type="date" name="enrollmentDate" value="<%= old.enrollmentDate || '' %>" required />
                </div>
            </div>

            <div class="form-group">
                <label for="address">Manzil: *</label>
                <textarea name="address" required placeholder="ToÊ»liq yashash manzili"><%= old.address || '' %></textarea>
            </div>
            
            <div class="form-group">
                <label for="faculty_id">Fakultet Tanlash: *</label>
                <select id="faculty_id" name="faculty_id" required>
                    <option value="">-- Fakultetni tanlang --</option>
                    <% faculties.forEach(faculty => { %>
                        <option value="<%= faculty.id %>" <%= old.faculty_id === faculty.id ? 'selected' : '' %>>
                            <%= faculty.name %>
                        </option>
                    <% }) %>
                </select>
            </div>

            <div class="form-group">
                <label>Biriktiriladigan Kurslar (Ko'p tanlash mumkin)</label>
                <div id="course-selection" class="course-selection-box">
                    <p style="color: #777; margin: 0;">Iltimos, avval **Fakultetni** tanlang.</p>
                </div>
            </div>
            
            <button type="submit">
                <i class="fas fa-save"></i> Talabani Ro'yxatdan O'tkazish
            </button>
        </form>
        
        <a href="/admin/students" class="back-link">
            <i class="fas fa-arrow-left"></i> Ro'yxatga qaytish
        </a>
    </div>

    <script>
        // Linter/Editor xatolarini maksimal darajada kamaytirish uchun EJS kodini yashiramiz.
        /* */

        const allCourses = <%- JSON.stringify(allCourses || []) %>;
        const oldSelectedCourses = <%- JSON.stringify(Array.isArray(old.courses) ? old.courses : (old.courses ? [old.courses] : [])) %>;
        
        // Agar editor xato bersa ham, iltimos shu qismni ishlatishda davom eting.
        
        const facultySelect = document.getElementById('faculty_id');
        const courseSelectionDiv = document.getElementById('course-selection');

        function filterCourses(facultyId) {
            courseSelectionDiv.innerHTML = '';
            
            if (!facultyId) {
                courseSelectionDiv.innerHTML = '<p style="color: #777; margin: 0;">Iltimos, avval Fakultetni tanlang.</p>';
                return;
            }

            const filteredCourses = allCourses.filter(course => course.faculty_id === facultyId);

            if (filteredCourses.length === 0) {
                 courseSelectionDiv.innerHTML = '<p style="color: red; margin: 0;">Bu Fakultetga biriktirilgan kurslar topilmadi.</p>';
                 return;
            }

            filteredCourses.forEach(course => {
                const isChecked = oldSelectedCourses.includes(course.id) ? 'checked' : ''; 
                

                const courseHtml = ` 
                    <div style="margin-bottom: 8px;">
                        <input type="checkbox" id="course_${course.id}" name="courses" value="${course.id}" ${isChecked}>
                        <label for="course_${course.id}">${course.title} (${course.credits} kredit)</label>
                    </div>
                `; 
                
                courseSelectionDiv.innerHTML += courseHtml;
            });
        }

        facultySelect.addEventListener('change', (e) => {
            filterCourses(e.target.value);
        });

        if (facultySelect.value) {
            filterCourses(facultySelect.value);
        }
    </script>
</body>
</html>